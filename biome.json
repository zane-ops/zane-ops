{
  "linter": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "indentStyle": "space",
      "trailingCommas": "none",
      "indentWidth": 2
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space"
    }
  },
  "files": {
    "ignore": [
      "./frontend/src/api/v1.ts",
      "./frontend/app/api/v1.ts",
      "./frontend/src/routeTree.gen.ts",
      "./frontend/dist/**",
      "./frontend/node_modules/**",
      "./frontend/build/**",
      "./frontend/.react-router/**",
      "node_modules/**"
    ]
  }
}
