{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "vite/client"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node", // Changed to node for better compatibility
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noErrorTruncation": true,
    "isolatedModules": true, // Required for module: "ESNext" or "ES2020"
    "noFallthroughCasesInSwitch": true, // stricter switch case checking
    "useDefineForClassFields": true, //  Modernize class fields
    "forceConsistentCasingInFileNames": true, // enforces consistent file casing
  }
}
